{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "BookStoreIdentityProviderContextConnection": "Server=.;Database=BookStoreIdentityProvider;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "IdentityServer": {
    "IdentityResources": [
      {
        "Name": "openid",
        "DisplayName": "Your user identifier",
        "Required": true,
        "UserClaims": [
          "sub"
        ]
      },
      {
        "Name": "profile",
        "DisplayName": "User profile",
        "Description": "Your user profile information (first name, last name, given name.... )",
        "Emphasize": true,
        "UserClaims": [
          "name",
          "family_name",
          "given_name",
          "middle_name",
          "preferred_username",
          "profile",
          "picture",
          "website",
          "gender",
          "birthdate",
          "zoneinfo",
          "locale",
          "updated_at"
        ]
      },
      {
        "Name": "bookstore",
        "DisplayName": "Book Store Application",
        "Description": "This is sample application",
        "Emphasize": true,
        "UserClaims": [
          "FullName",
          "CompanyStarted",
          "Address",
          "Permission",
          "role"
        ]
      }
    ],

    "ApiResources": [
      {
        "Name": "bookstore_apis",
        "DisplayName": "BookStore API",
        "Scopes": [
          {
            "Name": "bookstore_apis",
            "DisplayName": "BookStore API general access"
          },
          {
            "Name": "bookstore_viewbook",
            "DisplayName": "View Book API access"
          }
        ],
        "UserClaims": [ "Permission" ],
        //supersecret
        "ApiSecrets": [ { "Value": "91d490Jb5NsDadCa83psK5qD3qDlPnvVdBLksGDmB/c=" } ]
      }
    ],

    "Clients": [
      {
        "ClientId": "bookstore_webapp",
        "ClientName": "BookStoreSample",
        //supersecret
        "ClientSecrets": [ { "Value": "91d490Jb5NsDadCa83psK5qD3qDlPnvVdBLksGDmB/c=" } ],
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequiredPkce": true,
        "AllowedScopes": [ "openid", "profile", "bookstore", "bookstore_apis", "bookstore_viewbook" ],
        "RedirectUris": [ "https://localhost:5002/signin-oidc", "https://localhost:44339/signin-oidc" ],
        "PostLogoutRedirectUris": [ "https://localhost:5002/signout-callback-oidc", "https://localhost:44339/signout-callback-oidc" ],
        "FrontChannelLogoutUris": [ "https://localhost:5002/signout-oidc", "https://localhost:44339/signout-oidc" ],
        "AlwaysIncludeUserClaimsInIdToken": true,
        //"AllowOfflineAccess":  true
        "AccessTokenType" :  "Reference"
      },
      {
        "ClientId": "bookseller",
        "ClientName": "Book Seller",
        //easypassword
        "ClientSecrets": [ { "Value": "qWabI8QJHiwJiINQTlmiiKx1V6XT5S9SZ3ZwoPE/Xho=" } ],
        "AllowedGrantTypes": [ "client_credentials" ],
        "AllowedScopes": [ "bookstore_apis", "bookstore_viewbook" ]
      }
    ]
  }
}