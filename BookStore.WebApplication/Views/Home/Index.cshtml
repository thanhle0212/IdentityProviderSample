@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="color:green">This is an Identity Provider sample</h1>
    <br/>
</div>
@if (User.Identity.IsAuthenticated)
{
    <table class="table table-sm">
        <tr>
            <th>Claim Property</th>
            <th>Value</th>
        </tr>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>
}